      console.error(e);
      saleGrid.innerHTML = '<p class="muted">ØªØ¹Ø°Ù‘Ø± ØªØ­Ù…ÙŠÙ„ Ø§Ù„Ù…Ø²Ø§Ø±Ø¹.</p>';
