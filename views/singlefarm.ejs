function assetPath(u){
  u = (u||'').toString().trim();
  // 1) اترك الـdata: URI كما هو
  if (/^data:/i.test(u)) return u;

  // 2) إن كان URL كامل
  if (/^https?:\/\//i.test(u)) return u;

  // 3) تصحيح المسارات المحلية
  u = u.replace(/\\/g,'/');                 // backslashes → slashes
  u = u.replace(/^\/?Public\//, '/public/') // Public → public
       .replace(/\/assests\//gi, '/assets/');

  // 4) مسارات مقبولة كما هي
  if (u.startsWith('/uploads/')) return u;
  if (u.startsWith('/public/'))  return u;
  if (u.startsWith('/assets/'))  return '/public' + u;

  // 5) أي شيء يبدأ بـ/ نضيف له /public
  if (u.startsWith('/')) return '/public' + u;

  // 6) وإلا نعتبره ملفاً محلياً داخل uploads أو public حسب تنظيمك
  return '/uploads/' + u; // أو '/public/' + u إذا كانت أصولك هناك
}
