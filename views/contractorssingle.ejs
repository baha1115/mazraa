       const region   = contractor.region || contractor.city || '—';
      const rawTier  = contractor.userTier || contractor.subscriptionTier || 'Basic';
const tier     = ({ vip:'VIP', premium:'Premium', basic:'Basic' }[String(rawTier).toLowerCase()]) || rawTier;

