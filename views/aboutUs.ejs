<script>
  // تفعيل أكورديون
  document.querySelectorAll('.acc__btn').forEach(btn=>{
    btn.addEventListener('click', ()=>{
      const item = btn.closest('.acc__item');
      const panel = item.querySelector('.acc__panel');
      const open = item.classList.contains('is-open');
      // اغلق الباقي داخل نفس المجموعة
      item.parentElement.querySelectorAll('.acc__item').forEach(i=>{
        i.classList.remove('is-open');
        const p = i.querySelector('.acc__panel');
        p.style.maxHeight = null;
      });
      // افتح الحالي إن لم يكن مفتوحًا
      if (!open){
        item.classList.add('is-open');
        panel.style.maxHeight = panel.scrollHeight + 'px';
      }
    });
  });

  // تحديث الروابط الفعالة بالتنقّل
  const sections = ['about','terms','privacy','faq','join','ads-policy','report','blog'].map(id=>document.getElementById(id));
  const tocLinks = document.querySelectorAll('.toc-link');
  const topLinks = document.querySelectorAll('.nav a');
  const obs = new IntersectionObserver(entries=>{
    entries.forEach(ent=>{
      if(ent.isIntersecting){
        const id = ent.target.id;
        tocLinks.forEach(a=>a.classList.toggle('active', a.getAttribute('href')==='#'+id));
        topLinks.forEach(a=>a.classList.toggle('is-active', a.getAttribute('href')==='#'+id));
      }
    })
  }, {rootMargin:'-40% 0px -55% 0px', threshold:0});
  sections.forEach(s=>obs.observe(s));
  // تقرير البلاغ (تغذية راجعة بسيطة بدون خادم)
  const reportForm = document.getElementById('reportForm');
  reportForm.addEventListener('submit', (e)=>{
    e.preventDefault();
    const link = reportForm.adLink.value.trim();
    const reason = reportForm.reason.value;
    if(!link || !reason){ alert('يرجى تعبئة الحقول المطلوبة'); return; }
    document.getElementById('reportMsg').hidden = false;
    reportForm.reset();
  });
</script>
